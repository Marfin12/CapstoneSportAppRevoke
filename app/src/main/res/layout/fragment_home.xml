<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        android:id="@+id/incHomeHeader"
        layout="@layout/home_fragment_header" />

    <include
        android:id="@+id/incHomeEventSport"
        layout="@layout/home_fragment_event_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <include
        android:id="@+id/incHomeTeamVsTeam"
        layout="@layout/home_fragment_team_vs_team"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <include
        android:id="@+id/incHomeFragmentError"
        layout="@layout/home_fragment_error"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/incHomeFragmentEmpty"
        layout="@layout/fragment_empty"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>